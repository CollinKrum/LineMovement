{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts"        // pull in your shared schema/types
  ],
  "exclude": [
    "./vite.ts",               // dev-only middleware
    "./replitAuth.ts",         // not needed for API right now
    "../vite.config.ts",
    "../client/**",
    "../node_modules/**"
  ]
}
